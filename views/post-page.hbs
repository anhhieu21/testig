<div id="app">
    <div id="sidebar" class="active">
        <div class="sidebar-wrapper active">
            <div class="sidebar-header">
                <div class="d-flex justify-content-between">
                    <div class="logo">
                        <a href="/api/controllers/home"><img src="/images/logo/logo.jpg"  alt="Logo"
                                srcset="" />Admin</a> <p style="font-size:14px">Quản lý người dùng và tin đăng</p>  
                    </div>
                    <div class="toggler">
                        <a href="#" class="sidebar-hide d-xl-none d-block"><i class="bi bi-x bi-middle"></i></a>
                    </div>
                </div>
            </div>
            <div class="sidebar-menu">
                <ul class="menu">
                    <li class="sidebar-title">Menu</li>

                    <li class="sidebar-item">
                        <a href="/api/controllers/home" class="sidebar-link">
                            <i class="bi bi-grid-fill"></i>
                            <span>Tổng quan</span>
                        </a>
                    </li>

                    <li class="sidebar-title">TIN ĐĂNG &amp; NGƯỜI DÙNG</li>

                    <li class="sidebar-item active">
                        <a href="/api/controllers/post-page" class="sidebar-link">
                            <i class="bi bi-grid-1x2-fill"></i>
                            <span>Tin đăng</span>
                        </a>
                    </li>

                    <li class="sidebar-item">
                        <a href="/api/controllers/user-mng" class="sidebar-link">
                            <i class="bi bi-file-earmark-spreadsheet-fill"></i>
                            <span>Người dùng</span>
                        </a>
                    </li>
                </ul>
            </div>
            <button class="sidebar-toggler btn x">
                <i data-feather="x"></i>
            </button>
        </div>
    </div>
    <div id="main">
        <header class="mb-3">
            <a href="#" class="burger-btn d-block d-xl-none">
                <i class="bi bi-justify fs-3"></i>
            </a>
        </header>

        <div class="page-heading">
            <div class="page-title">
                <div class="row">
                    <div class="col-12 col-md-6 order-md-1 order-last">
                        <h3>Quản lý tin đăng</h3>
                        <p class="text-subtitle text-muted">
                            của tất cả các người dùng
                        </p>
                    </div>
                    <div class="col-12 col-md-6 order-md-2 order-first">
                        <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="/home">Tổng quan</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Tin đăng
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
            <!-- Bordered table start -->
            <section class="section">
                <div class="row" id="table-bordered">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Tin đang hoạt động</h4>
                            </div>
                                <!-- table bordered -->
                                <div class="table-responsive">
                                    <table class="table table-bordered mb-0" id="table1">
                                        <thead>
                                            <tr>
                                                <th>ID Tin</th>
                                                <th>Tên</th>
                                                <th>ID Người dùng</th>
                                                <th>Số đơn tố cáo</th>
                                                <th>Loại</th>
                                                <th>Thực hiện</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each rows}}
                                            <tr>
                                                <td class="text-bold-500">{{this.productId}}</td>
                                                <td>{{this.name}}</td>
                                                <td class="text-bold-500">{{this.idUser}}</td>
                                                <td>{{this.lockPr}} <strong>/3</strong></td>
                                                <td>{{this.type1}}</td>
                                                <td>
                                                    <div class="buttons">
                                                        <a href="/api/controllers/lock-product/{{this.productId}}" type="button" class="btn btn-secondary" >Khóa Tin</a>
                                                        <a href="/api/controllers/delete-pr/{{this.productId}}"  type="button" class="btn btn-danger" >Xóa Tin</a>
                                                    </div>
                                                </td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Bordered table end -->
            <!-- Striped rows with inverse dark table start -->
            <section class="section">
                <div class="row" id="table-striped-dark">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Tin đang ẩn</h4>
                            </div>
                            <div class="card-content">
                                <div class="card-body">
                                    <p class="card-text">
                                        Ẩn tự động bởi hệ thống do tổng đơn tố cáo trên 2 lần <a href="/support-rp">(Xem
                                            xét)</a>
                                    </p>
                                </div>
                                <!-- table strip dark -->
                                <div class="table-responsive">
                                    <table class="table table-striped table-dark mb-0">
                                        <thead>
                                            <tr>
                                                <th>ID Tin</th>
                                                <th>Tên</th>
                                                <th>ID Người dùng</th>
                                                <th>Số đơn tố cáo</th>
                                                <th>Loại</th>
                                                <th>Thực hiện</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each rows1}}
                                            <tr>
                                                <td class="text-bold-500">{{this.productId}}</td>
                                                <td>{{this.name}}</td>
                                                <td class="text-bold-500">{{this.idUser}}</td>
                                                <td>{{this.lockPr}} <strong>/3</strong></td>
                                                <td>{{this.type1}}</td>
                                                <td>
                                                    <div class="buttons">
                                                        <a href="/api/controllers/lockout-productU/{{this.productId}}" type="button" class="btn btn-primary" >Mở khóa</a>
                                                    </div>
                                                </td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Striped rows with inverse dark table end -->

        </div>

        <footer>
            <div class="footer clearfix mb-0 text-muted">
                <div class="float-start">
                    <p>Đồ Án 2021 </p>
                </div>
                <div class="float-end">
                    <p>
                        <span class="text-danger"><i class="bi bi-heart"></i></span>
                        <a href="https://www.facebook.com/nhuanhhieu.21/">A.Hiếu</a>
                    </p>
                </div>
            </div>
        </footer>
    </div>
</div>